# Production Environment Configuration

# API Base URL
API_URL=https://api.ilive.com/api/v1

# Server Configuration
NODE_ENV=production
PORT=8080

# Database Configuration
DB_HOST=production-db-host
DB_PORT=3306
DB_NAME=ilive_production_db
DB_USER=prod_user
DB_PASSWORD=prod_password

# JWT Configuration
JWT_SECRET=production-secret-key-here
JWT_ACCESS_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# File Upload
UPLOAD_PATH=/var/www/uploads
MAX_FILE_SIZE=5242880

# Payment Gateway
PAYMENT_API_KEY=production-payment-key
PAYMENT_API_SECRET=production-payment-secret

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=production@ilive.com
SMTP_PASS=production-email-password

# Security
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=https://ilive.com

# Shopping Cart
CART_EXPIRY_DAYS=30
MIN_ORDER_AMOUNT=100
FREE_SHIPPING_THRESHOLD=1000

# Product Images
IMAGE_BASE_URL=https://cdn.ilive.com/images
DEFAULT_IMAGE_PATH=/default-product.jpg

# Cache Configuration
REDIS_HOST=production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=production-redis-password

# CDN Configuration
CDN_URL=https://cdn.ilive.com

# Logging
LOG_LEVEL=error
LOG_PATH=/var/log/ilive
