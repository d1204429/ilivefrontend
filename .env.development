# 環境標識
NODE_ENV=development

# API配置
VITE_API_BASE_URL=http://localhost:1988/api/v1
VITE_API_TIMEOUT=5000

# 開發伺服器配置
VITE_DEV_SERVER_PORT=8080
VITE_DEV_SERVER_HOST=localhost

# JWT配置
VITE_JWT_TOKEN_KEY=iLive_token
VITE_JWT_REFRESH_KEY=iLive_refresh_token
VITE_JWT_EXPIRES_IN=1d

# 系統配置
VITE_APP_NAME=iLive商城
VITE_APP_DESCRIPTION=提供優質商品與完善的購物體驗
VITE_SUPPORT_EMAIL=support@ilive.com

# 安全配置
VITE_CORS_ENABLED=true
VITE_CORS_ORIGINS=http://localhost:8080,http://192.168.226.1:8080,http://192.168.180.1:8080,http://192.168.43.90:8080

# 購物車配置
VITE_CART_STORAGE_KEY=iLive_cart
VITE_MIN_ORDER_AMOUNT=100
VITE_FREE_SHIPPING_AMOUNT=1000

# 用戶配置
VITE_USER_STORAGE_KEY=iLive_user
VITE_AUTH_STORAGE_KEY=iLive_auth

# API路徑配置
VITE_AUTH_API_PATH=/users
VITE_PRODUCTS_API_PATH=/products
VITE_CART_API_PATH=/cart
VITE_ORDERS_API_PATH=/orders

# 錯誤處理配置
VITE_ERROR_SHOW_DURATION=3000
VITE_MAX_RETRY_ATTEMPTS=3

# 分頁配置
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=50

# 快取配置
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION=3600

# 開發工具配置
VITE_ENABLE_DEVTOOLS=true
VITE_SOURCE_MAPS=true
VITE_HOT_RELOAD=true

# 多語系配置
VITE_DEFAULT_LOCALE=zh-TW
VITE_AVAILABLE_LOCALES=zh-TW,en-US

# 圖片上傳配置
VITE_UPLOAD_MAX_SIZE=5242880
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
VITE_UPLOAD_PATH=/uploads

# 日誌配置
VITE_LOG_LEVEL=debug
VITE_LOG_OUTPUT=console

# API響應配置
VITE_SUCCESS_CODE=200
VITE_ERROR_CODE=500
VITE_UNAUTHORIZED_CODE=401
VITE_FORBIDDEN_CODE=403
