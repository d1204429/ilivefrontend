# 環境標識
NODE_ENV=development

# API配置
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_API_TIMEOUT=10000

# 開發伺服器配置
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost

# 資料庫配置
VITE_DB_HOST=localhost
VITE_DB_PORT=3306
VITE_DB_NAME=ilive_dev
VITE_DB_USER=root
VITE_DB_PASSWORD=password

# JWT配置
VITE_JWT_SECRET=your_jwt_secret_key
VITE_JWT_EXPIRES_IN=1d

# 上傳檔案配置
VITE_UPLOAD_MAX_SIZE=5242880
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
VITE_UPLOAD_PATH=/uploads

# 第三方服務配置
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# 快取配置
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION=3600

# 日誌配置
VITE_LOG_LEVEL=debug
VITE_LOG_OUTPUT=console

# 安全配置
VITE_CORS_ENABLED=true
VITE_CORS_ORIGIN=http://localhost:3000
VITE_RATE_LIMIT_WINDOW=15
VITE_RATE_LIMIT_MAX=100

# PWA配置
VITE_PWA_ENABLED=false

# 社交媒體配置
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# 購物車配置
VITE_CART_EXPIRE_DAYS=7
VITE_MIN_ORDER_AMOUNT=100
VITE_FREE_SHIPPING_AMOUNT=1000

# 系統配置
VITE_APP_NAME=iLive商城
VITE_APP_DESCRIPTION=提供優質家電商品與完善的售後服務
VITE_SUPPORT_EMAIL=support@ilive.com
VITE_SUPPORT_PHONE=0800-123-456

# 開發工具配置
VITE_ENABLE_DEVTOOLS=true
VITE_SOURCE_MAPS=true
VITE_HOT_RELOAD=true

# 性能監控配置
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_REPORTING=true

# CDN配置
VITE_CDN_URL=http://localhost:3000/assets/

# 多語系配置
VITE_DEFAULT_LOCALE=zh-TW
VITE_AVAILABLE_LOCALES=zh-TW,en-US

# Redis配置
VITE_REDIS_HOST=localhost
VITE_REDIS_PORT=6379
VITE_REDIS_PASSWORD=

# 搜尋引擎配置
VITE_ELASTICSEARCH_HOST=localhost
VITE_ELASTICSEARCH_PORT=9200

# WebSocket配置
VITE_WS_URL=ws://localhost:8080

# 驗證碼配置
VITE_CAPTCHA_ENABLED=true
VITE_CAPTCHA_SITE_KEY=your_captcha_site_key
